{
  "packages": [
    "kind@0.30.0",
    "gh@2.83.2",
    "kubectl@1.34.3",
    "bat@0.26.1",
    "upbound@0.40.3",
    "kubernetes-helm@3.19.1",
    "watchexec@2.3.2",
    "kyverno-chainsaw@0.2.14",
    "just@1.43.1",
    "jq@1.8.1",
    "gum@0.17.0",
    "yq-go@4.50.1",
    "crossplane-cli@2.0.2",
    "viddy@1.3.0",
    "kcl-cli@0.8.9",
    "path:gcloud#google-cloud-sdk",
    "vals@0.42.6",
    "azure-cli@2.81.0",
    "awscli2@2.32.15",
    "nushell@0.108.0",
    "git@2.51.2"
  ],
  "shell": {
    "init_hook": [
      "export PATH=\"$HOME/.local/bin:$PATH\"",
      "[ -n \"$USE_VALS\" ] && eval \"$(vals env -export -f .env.vals.yaml)\" || true",
      "[ -f .env ] && source .env || true"
    ],
    "scripts": {
      "cluster-create":  ["just cluster-create"],
      "cluster-destroy": ["just cluster-destroy"],
      "package-publish": ["just package-publish"],
      "test":            ["just test"],
      "test-watch":      ["just test-watch"]
    }
  }
}
